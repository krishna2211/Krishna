
<h1>Http GET DEMO</h1>
@using (Html.BeginForm("Submit","Home",FormMethod.Get))
            {
<table>
    <tr>
        <td>Enter Id:</td>
        <td>@Html.TextBox("Id")</td>
    </tr>
    <tr>
        <td>Enter Name:</td>
        <td>@Html.TextBox("name")</td>
    </tr>
    <tr>
        <td colspan="2"><input type="submit" value="submit" />
      </td>
    </tr>
</table>
     }
<h3>
    Id:@ViewBag.Id<br />
    Name:@ViewBag.name<br />
</h3>